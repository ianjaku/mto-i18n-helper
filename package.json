{
	"name": "mto-lang",
	"displayName": "mto-lang",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.69.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mto-lang.translate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "mto-lang.translate",
				"title": "Manual.to translate"
			}
		],
		"configuration":[
			{
				"title": "Manual.to i18n",
				"properties": {
					"mto-lang.deepl.key": {
						"type": "string",
						"default": "",
						"description": "Deepl API Key (optional for automatic translation)"
					},
					"mto-lang.languages.paths": {
						"type": ["object", "null"],
						"default": null,
						"description": "Manual.to language file paths"
					},
					"mto-lang.languages.master": {
						"type": ["string", "null"],
						"default": null,
						"description": "The master language (references a key in languages.paths)"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"axios": "^0.27.2"
	}
}
